<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.EncomendaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sobrasInfo"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/button4"
            android:layout_toEndOf="@+id/scroll"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent"
            android:text="Registo de sobras" />

        <ListView
            android:id="@+id/listaBolos"
            android:layout_width="350dp"
            android:layout_height="588dp"
            android:layout_above="@+id/textView36"
            android:layout_below="@+id/textView13"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/lista"
            android:layout_toEndOf="@+id/scroll" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="992dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/textView2"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="Encomenda dia seguinte" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="7dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="Encomendas de clientes para amanhã" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Pão Paris" />

                        <EditText
                            android:id="@+id/pParis"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Biju de trigo" />

                        <EditText
                            android:id="@+id/biju"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Pão de Lata" />

                        <EditText
                            android:id="@+id/pLata"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Pão integral" />

                        <EditText
                            android:id="@+id/pIntegral"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Biju escuro" />

                        <EditText
                            android:id="@+id/escuro"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Bicas massa fina" />

                        <EditText
                            android:id="@+id/bicas"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Cacetes (peças normal)" />

                        <EditText
                            android:id="@+id/cacetes"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="200dp"
