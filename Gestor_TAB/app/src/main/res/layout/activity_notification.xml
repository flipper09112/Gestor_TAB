                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Broa Milho (Kg)" />

                        <EditText
                            android:id="@+id/bmKg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Broa Centeio (Kg)" />

                        <EditText
                            android:id="@+id/bcKg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Broa Centeio (1/2Kg)" />

                        <EditText
                            android:id="@+id/bcHalfKg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Pão Quado (Kg)" />

                        <EditText
                            android:id="@+id/pqKg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Pão Quado (1/2Kg)" />

                        <EditText
                            android:id="@+id/pqHalfKg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Regueifa" />

                        <EditText
                            android:id="@+id/regueifa"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Regueifa Grande" />

                        <EditText
                            android:id="@+id/regueifaG"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>


                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button4"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="-1dp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeTextType="uniform"
            android:onClick="sendEmail"
            android:text="Enviar" />

        <ListView
            android:id="@+id/lista"
            android:layout_width="280dp"
            android:layout_height="588dp"
            android:layout_above="@+id/button4"
            android:layout_below="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/sobrasInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/button4"
            android:layout_toEndOf="@+id/scroll"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textAlignment="center" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>