                        <EditText
                            android:id="@+id/cIntegral"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Bolas de Trigo (Kg)" />

                        <EditText
                            android:id="@+id/bolasKg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Bolas de Trigo (1/2Kg)" />

                        <EditText
                            android:id="@+id/bolasHalfKg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeTextType="uniform"
                            android:text="Broa Milho (1/2Kg)" />

                        <EditText
                            android:id="@+id/bmHalfKg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="2"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="200dp"
