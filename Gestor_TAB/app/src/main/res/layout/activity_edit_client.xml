<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditClientActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="215dp"
            android:layout_height="172dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/notfoundimage" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="995dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="21dp"
            android:layout_toEndOf="@+id/imageView3"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center" />

        <Button
            android:id="@+id/pagamento"
            android:layout_width="281dp"
            android:layout_height="129dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:onClick="salvar"
            android:text="Guardar (Menu Cliente)" />

        <Button
            android:id="@+id/pagamento2"
            android:layout_width="281dp"
            android:layout_height="129dp"
            android:layout_above="@+id/pagamento"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeTextType="uniform"
            android:onClick="salvar"
            android:text="Guardar (Lista Clientes)" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="998dp"
            android:layout_height="36dp"
            android:layout_below="@+id/nome"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="21dp"
            android:layout_toEndOf="@+id/imageView3"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="215dp"
            android:layout_height="44dp"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="Despesa"
            android:textAlignment="center" />

        <TableLayout
            android:layout_width="215dp"
            android:layout_height="558dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Segunda"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/segunda"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Terça"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/terca"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Quarta"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/quarta"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Quinta"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/quinta"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Sexta"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/sexta"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Sábado"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/sabado"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Domingo"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/domingo"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </TableRow>

        </TableLayout>

        <TabHost
            android:id="@+id/tab"
            android:layout_width="725dp"
            android:layout_height="600dp"
            android:layout_below="@+id/descricao"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            android:layout_toStartOf="@+id/pagamento"
            android:layout_toEndOf="@+id/textView3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tab6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pago até"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="date" />

                        <TextView
                            android:id="@+id/extras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Extras"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/extra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:id="@+id/radioG"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <RadioButton
                                        android:id="@+id/diario"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Diário" />

                                    <RadioButton
                                        android:id="@+id/semanal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Semanal" />

                                    <RadioButton
                                        android:id="@+id/mensal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Mensal" />

                                    <RadioButton
                                        android:id="@+id/especial"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Especial (Indisponivel)" />
                                </RadioGroup>
                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <CalendarView
                            android:id="@+id/calendarView5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>